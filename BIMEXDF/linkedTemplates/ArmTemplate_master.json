{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "BIMEXDF"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"AzureSqlDatabase1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase1'"
		},
		"SapOpenHub1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SapOpenHub1'"
		},
		"SapTable1_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'SapTable1'"
		},
		"HttpServerSPO_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://bimexanalyticsbcn.sharepoint.com/sites/Bimex/_api/web/GetFileByServerRelativeUrl('/sites/Bimex/Shared%20Documents/Docs%20Test/Account_Hier.xlsx')/$value"
		},
		"SapOpenHub1_properties_typeProperties_clientId": {
			"type": "string",
			"defaultValue": "200"
		},
		"SapOpenHub1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "bimex"
		},
		"SapOpenHub1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "192.168.1.198"
		},
		"SapOpenHub1_properties_typeProperties_systemNumber": {
			"type": "string",
			"defaultValue": "00"
		},
		"SapTable1_properties_typeProperties_clientId": {
			"type": "string",
			"defaultValue": "200"
		},
		"SapTable1_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "bimex"
		},
		"SapTable1_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "172.16.1.177"
		},
		"SapTable1_properties_typeProperties_systemNumber": {
			"type": "string",
			"defaultValue": "00"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "BIMEXDF_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"AzureSqlDatabase1_connectionString": {
						"value": "[parameters('AzureSqlDatabase1_connectionString')]"
					},
					"HttpServerSPO_properties_typeProperties_url": {
						"value": "[parameters('HttpServerSPO_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "BIMEXDF_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'BIMEXDF_ArmTemplate_0')]"
			]
		},
		{
			"name": "BIMEXDF_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"SapOpenHub1_password": {
						"value": "[parameters('SapOpenHub1_password')]"
					},
					"SapTable1_password": {
						"value": "[parameters('SapTable1_password')]"
					},
					"SapOpenHub1_properties_typeProperties_clientId": {
						"value": "[parameters('SapOpenHub1_properties_typeProperties_clientId')]"
					},
					"SapOpenHub1_properties_typeProperties_userName": {
						"value": "[parameters('SapOpenHub1_properties_typeProperties_userName')]"
					},
					"SapOpenHub1_properties_typeProperties_server": {
						"value": "[parameters('SapOpenHub1_properties_typeProperties_server')]"
					},
					"SapOpenHub1_properties_typeProperties_systemNumber": {
						"value": "[parameters('SapOpenHub1_properties_typeProperties_systemNumber')]"
					},
					"SapTable1_properties_typeProperties_clientId": {
						"value": "[parameters('SapTable1_properties_typeProperties_clientId')]"
					},
					"SapTable1_properties_typeProperties_userName": {
						"value": "[parameters('SapTable1_properties_typeProperties_userName')]"
					},
					"SapTable1_properties_typeProperties_server": {
						"value": "[parameters('SapTable1_properties_typeProperties_server')]"
					},
					"SapTable1_properties_typeProperties_systemNumber": {
						"value": "[parameters('SapTable1_properties_typeProperties_systemNumber')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'BIMEXDF_ArmTemplate_1')]"
			]
		}
	]
}